generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id    Int    @id @default(autoincrement())
  title String
  desc  String
  type  String

  detailsId Int?                @unique
  details   ProjectMoreDetails? @relation(fields: [detailsId], references: [id])

  categories   ProjectCategory[]   @relation("ProjectCategories")
  technologies ProjectTechnology[]

  @@map("projects")
}

model ProjectMoreDetails {
  id      Int      @id @default(autoincrement())
  project Project?

  gitLink  String
  link     String
  imageUrl String[]
  desc     Json
}

model ProjectCategory {
  id   Int    @id @default(autoincrement())
  name String

  projects Project[] @relation("ProjectCategories") 
}

model Technology {
  id    Int    @id @default(autoincrement())
  name  String @unique
  icon  String
  color String

  projects ProjectTechnology[]
}

model ProjectTechnology {
  projectId    Int
  technologyId Int
  project      Project    @relation(fields: [projectId], references: [id])
  technology   Technology @relation(fields: [technologyId], references: [id])

  @@id([projectId, technologyId])
  @@map("_ProjectTechnology")
}
