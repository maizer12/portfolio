generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id    Int    @id @default(autoincrement())
  title String
  desc  String
  type  String

  icons Icon[] @relation("ProjectIcons")

  categories CategorysOnProjects[]

  technologies Technology[] @relation("ProjectTechnology")

  @@map("projects")
}

model ProjectCategory {
  id   Int    @id @default(autoincrement())
  name String

  ProjectCategoryOnProject CategorysOnProjects[]
}

model CategorysOnProjects {
  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  categoryId Int
  category   ProjectCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([projectId, categoryId])
}

model Icon {
  id        Int     @id @default(autoincrement())
  icon      String
  fill      String
  projectId Int
  project   Project @relation("ProjectIcons", fields: [projectId], references: [id])

  @@map("icons")
}

model Technology {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  icon     String
  color    String
  projects Project[] @relation("ProjectTechnology")
}
